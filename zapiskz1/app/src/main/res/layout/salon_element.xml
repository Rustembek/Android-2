<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="197.5dp"
    android:layout_marginTop="7.5dp"
    android:layout_marginBottom="7.5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!--<android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="80dp"

        >

    </android.support.v7.widget.CardView>-->
    <ImageView
        android:id="@+id/imageview_image"
        android:layout_width="185dp"
        android:layout_height="140dp"
        android:src="@drawable/testimage"
        android:scaleType="centerCrop"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

    <TextView
        android:id="@+id/textview_name"
        android:maxLines="1"
        android:layout_width="160dp"
        android:layout_height="23dp"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Name"
        android:gravity="center_vertical"
        android:textColor="#F0000000"
        app:layout_constraintHorizontal_chainStyle="packed"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textview_check_rating"
        app:layout_constraintTop_toBottomOf="@id/imageview_image"
        app:layout_constraintBottom_toTopOf="@id/textview_type"
        />

    <TextView
        android:id="@+id/textview_check_rating"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:textSize="12sp"
        android:gravity="end|center_vertical"

        tools:text="$$"
        android:maxLines="1"

        app:layout_constraintStart_toEndOf="@id/textview_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_name"
        app:layout_constraintBottom_toBottomOf="@id/textview_name"
        />

    <TextView
        android:id="@+id/textview_type"
        android:layout_width="185dp"
        android:layout_height="18dp"
        android:textSize="12sp"
        tools:text="Type"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_name"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>